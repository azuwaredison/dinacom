<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.pesandokter.HargaDokterActivity">

    <LinearLayout
        android:id="@+id/linear_hraga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dokter"
            android:layout_marginTop="@dimen/margin20"
            android:textStyle="bold"
            android:textSize="@dimen/ukuranText"
            android:layout_gravity="center"
            android:textColor="@color/background"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_hraga"
        android:layout_marginTop="@dimen/margin20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin20"
            android:paddingRight="@dimen/margin20"
            android:padding="@dimen/width">

            <ListView
                android:id="@+id/list_harga"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>