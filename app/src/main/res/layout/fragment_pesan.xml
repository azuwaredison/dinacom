<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PesanFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relatif_pesan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="@dimen/margin30"
            android:paddingLeft="@dimen/margin30">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/kembali"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin20"
                    android:background="@drawable/ic_arrow"/>

                <TextView
                    android:id="@+id/tv_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin20"
                    android:layout_centerInParent="true"
                    android:textColor="@color/hitam"
                    android:text="@string/inbox" />

                <Button
                    android:id="@+id/hapus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin20"
                    android:background="@drawable/ic_delete_orange"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/margin20"
            android:paddingLeft="@dimen/margin20"
            android:padding="@dimen/width"
            android:layout_below="@id/relatif_pesan"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </ListView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>